@model IEnumerable<folio.Models.Project>
@{
    ViewData["Title"] = "Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Navbar {
    <ul class="navbar-nav flex-grow-1 flex-sm-row justify-content-sm-end">
        <li class="nav-item text-center mx-sm-3">
            <button class="search button">
                <img alt="Search" src="~/img/bell.png" />
                <span class="d-sm-none"> Search </span>
            </button>
        </li>
        <li class="nav-item text-center mx-sm-3">
            <a class="button" asp-controller="Auth" asp-action="Portfolio">
                Portfolio
            </a>
        </li>
        <li class="nav-item text-center mx-sm-3">
            <a class="button" asp-controller="Auth" asp-action="Projects">
                Projects
            </a>
        </li>
    </ul>
}


<h4 class="PageTitle">View Projects</h4>
<li class="nav-item text-center mx-sm-3">
    <a class="button striking" asp-controller="Auth" asp-action="Create">
        Create
    </a>
</li>
@if (Model.ToList().Count > 0)
{
    <div class="container">
        <div class="d-flex justify-content-center flex-wrap">

            @foreach (var i in Model)
            {
                <div class="LCards">
                    @{ string imageFileName = i.ProjectPoster; }
                    <img src="~/images/@imageFileName"
                         style="width:100%;" alt="@i.ProjectPoster" class="LSelect" />

                    <div class="LContainer">
                        <h4 class="text-lg-left font-weight-bold" style="margin: 5px;">@i.Title</h4>
                        <p class="text-md-left font-weight-light font-italic" style="margin: 5px;"></p>
                        <p class="text-md-left font-weight-bold "
                           style="margin: 5px; color:#2d2d30"></p>
                    </div>

                </div>
            }
        </div>

    </div>

}
<style>
    div.LCards {
        margin: 50px;
        float: left;
        width: 250px;
        box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        text-align: left;
    }
    div.LContainer.text-lg-left {
        text-align:center;
    }
    a.button.striking {
        text-align:right;
    }
</style>