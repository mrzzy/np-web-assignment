@model IEnumerable<folio.Models.ProjectMember>
@{
    ViewData["Title"] = "Project Member";
}

@section Navbar {
    <ul class="navbar-nav flex-grow-1 flex-sm-row justify-content-sm-end">
        <li class="nav-item text-center mx-sm-3">
            <button class="search button">
                <img alt="Search" src="~/img/bell.png" />
                <span class="d-sm-none"> Search </span>
            </button>
        </li>
        <li class="nav-item text-center mx-sm-3">
            <a class="button" asp-controller="Auth" asp-action="Portfolio">
                Portfolio
            </a>
        </li>
        <li class="nav-item text-center mx-sm-3">
            <a class="button" asp-controller="Auth" asp-action="Projects">
                Projects
            </a>
        </li>
    </ul>
}
    <form asp-action="ViewProjMember" method="post">
        @if (Model.ToList().Count > 0)
        {
        <div class="container">
            <div class="d-flex justify-content-center flex-wrap">



                @foreach (var i in Model)
                {
                    <div class="LCards">

                        <div class="LContainer">
                            StudentID:<h4 class="text-lg-left font-weight-bold" style="margin: 5px;">@i.StudentId</h4>
                            Role:<p class="text-md-left font-weight-bold "
                                    style="margin: 5px; color:#2d2d30;
                            overflow: hidden;text-overflow: ellipsis;
                            width: 240px; white-space: nowrap; ">@i.Role</p>

                        </div>
                        <div class="col-md-4">
                            <div class="md-form mb-0">
                                <input type="text" id="ProjTitle" class="form-control" asp-for="@i.ProjectId" readonly>
                                <label for="name" class="ProjTitle"></label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="md-form mb-0">
                                <input type="text" id="ProjTitle" class="form-control" asp-for="@i.StudentId" value="@i.StudentId">
                                <label for="name" class="ProjTitle"></label>
                            </div>
                        </div>
                    </div>

                }

            </div>

            <button class="btn button striking" type="submit" name="submit-btn" id="create-btn-submit">
                Confirm
            </button>
        </div>

        }
    </form>
<style>
    div.LCards {
        margin: 50px;
        float: left;
        width: 250px;
        box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        text-align: left;
    }

    div.LContainer.text-lg-left {
        text-align: center;
    }

    a.button.striking {
        float: right;
        margin-right: 50px;
    }

    h4.PageTitle {
        text-align: center;
    }

    #editbtn {
        float: left;
    }
</style>