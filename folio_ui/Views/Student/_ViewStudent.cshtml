@model IEnumerable<folio_ui.Models.Student>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewStudent" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>StudentId</th>
                    <th>Name</th>
                    <th>Course</th>
                    <th>Photo</th>
                    <th>Description</th>
                    <th>Achievement</th>
                    <th>ExternalLink</th>
                    <th>EmailAddress</th>
                    <th>Password</th>
                    <th>MentorId</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StudentId.ToString()</td>
                        <td>@item.Name</td>
                        <td>@item.Course</td>
                        <td>@item.Photo</td>
                        <td>@item.Description</td>
                        <td>@item.Achievement</td>
                        <td>@item.ExternalLink</td>
                        <td>@item.EmailAddr</td>
                        <td>@item.Password</td>
                        <td>@item.MentorId</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>
}