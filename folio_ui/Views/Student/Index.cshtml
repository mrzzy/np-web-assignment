@model IEnumerable<folio.Models.Student>

@{
    ViewData["Title"] = "View Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Navbar {
    <ul class="navbar-nav flex-grow-1 flex-sm-row justify-content-sm-end">
        <li class="nav-item text-center mx-sm-3">
            <button class="search button">
                <img alt="Search" src="/img/search@2x.png" />
                <span class="d-sm-none"> Search </span>
            </button>
        </li>
        <li class="nav-item text-center mx-sm-3">
            <a class="button" asp-controller="Auth" asp-action="Login">
                Login
            </a>
        </li>
        <li class="nav-item text-center mx-sm-3">
            <a class="button striking" asp-controller="Auth" asp-action="Join">
                Join
            </a>
        </li>
    </ul>
}

<h4 class="PageTitle">View Students</h4>
@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewStudent" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.StudentId)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Course)</th>
                    <th>@Html.DisplayNameFor(model => model.Photo)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.Achievement)</th>
                    <th>@Html.DisplayNameFor(model => model.ExternalLink)</th>
                    <th>@Html.DisplayNameFor(model => model.EmailAddr)</th>
                    <th>@Html.DisplayNameFor(model => model.Password)</th>
                    <th>@Html.DisplayNameFor(model => model.MentorId)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StudentId</td>
                        <td>@item.Name</td>
                        <td>@item.Course</td>
                        <td><img src="/img/@item.Photo" /></td>
                        <td>@item.Description</td>
                        <td>@item.Achievement</td>
                        <td>@item.ExternalLink</td>
                        <td>@item.EmailAddr</td>
                        <td>@item.Password</td>
                        <td>@item.MentorId</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
