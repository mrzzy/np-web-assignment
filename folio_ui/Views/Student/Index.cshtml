@model IEnumerable<folio.Models.Student>

@{
    ViewData["Title"] = "Students";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h4 class="PageTitle">View Students</h4>
@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewStudent" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.StudentId)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Course)</th>
                    <th>@Html.DisplayNameFor(model => model.Photo)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.Achievement)</th>
                    <th>@Html.DisplayNameFor(model => model.ExternalLink)</th>
                    <th>@Html.DisplayNameFor(model => model.EmailAddr)</th>
                    <th>@Html.DisplayNameFor(model => model.Password)</th>
                    <th>@Html.DisplayNameFor(model => model.MentorId)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StudentId</td>
                        <td>@item.Name</td>
                        <td>@item.Course</td>
                        <td>@item.Photo</td>
                        <td>@item.Description</td>
                        <td>@item.Achievement</td>
                        <td>@item.ExternalLink</td>
                        <td>@item.EmailAddr</td>
                        <td>@item.Password</td>
                        <td>@item.MentorId</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>
}
