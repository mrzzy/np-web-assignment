@model  folio.Models.Suggestion

@{
    ViewData["Title"] = "View Mentees";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["LecturerId"] = (Context.Items["UserInfo"] as UserInfo).Id;
}
@section Navbar
    {
    <ul class=" navbar-nav flex-grow-1 flex-sm-row justify-content-sm-end">
        <li class="nav-item text-center mx-sm-3">
            <a class="button" asp-action="Details" asp-controller="Lecturer" asp-route-id="@ViewData["LecturerId"]">View Profile</a>
        </li>
        <li class="nav-item text-center mx-sm-3">
            <a class="button" asp-controller="Suggestion" asp-action="Index" asp-route-id="@ViewData["LecturerId"]">Post Suggestion</a>
        </li>
        <li class="nav-item text-center mx-sm-3">
            <a class="button" asp-action="ViewMentees" asp-controller="Lecturer" asp-route-id="@ViewData["LecturerId"]">View Mentees</a>
        </li>
        <li class="nav-item text-center mx-sm-3">
            <a class="button" asp-action="Index" asp-controller="SkillSet" asp-route-id="@ViewData["LecturerId"]">Skill Sets</a>
        </li>
        <li class="nav-item text-center mx-sm-3">
            <a class="button" asp-action="ChangePassword" asp-controller="Lecturer" asp-route-id="@ViewData["LecturerId"]">Change Password</a>
        </li>

        <li class="nav-item text-center mx-sm-3">
            <a class="button" id="btn-logout">Log Out</a>
        </li>
    </ul>
}

<h1 class="text-center">Create Suggestion</h1>
<form asp-action="Create" method="post">
    <div class="container d-flex justify-content-center">
        <div class="d-flex flex-column LCards ">
            <div class="d-flex flex-row">
                <div style="box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.1), 0 1px 0px 0 rgba(0, 0, 0, 0.1);
                     width:550px; height:55px;">
                    <input style="visibility:hidden" type="text" asp-for="LecturerId" value="@ViewData["LecturerId"]" />
                    <input style="visibility:hidden" type="text" asp-for="StudentId" value="@ViewData["studentId"]" />
                </div>

            </div>

            <div>
                <div class="d-flex" style="box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.2), 0 1px 2px 0 rgba(0, 0, 0, 0.1);
                     height: 450px;width: 470px;
                     margin:30px 50px 20px 40px;">
                    <textarea style="height:450px; width:470px;" asp-for="Description"></textarea></div>
            </div>
        </div>
        <br />
        <button type="submit" class="submitBtn font-weight-bold">
            <span>Create</span>
        </button>
    </div>
</form>


<style>
    div.LCards {
        margin-left: 50px;
        margin-bottom: 50px;
        height: 550px;
        width: 550px;
        box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.2), 0 6px 2px 0 rgba(0, 0, 0, 0.1);
        text-align: left;
    }

    .submitBtn {
        margin: 7px;
        font-size: 25px;
        background-color: #FFD00B;
        border-color: #FFD00B;
        padding: 7px 15px;
        width: 150px;
        height: 150px;
        transition: all 0.5s;
    }

        .submitBtn span {
            cursor: pointer;
            display: inline-block;
            position: relative;
            transition: 0.5s;
        }

            .submitBtn span:after {
                content: '\25b6';
                position: absolute;
                opacity: 0;
                top: 0;
                right: -20px;
                transition: 0.5s;
            }

        .submitBtn:hover span {
            padding-right: 30px;
        }

            .submitBtn:hover span:after {
                opacity: 1;
                right: 0;
            }
</style>
