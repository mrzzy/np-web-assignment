@model IEnumerable<folio.Models.Suggestion>

@{
    ViewData["Title"] = "View Mentees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Navbar
    {
    <ul class=" navbar-nav flex-grow-1 flex-sm-row justify-content-sm-end">
        <li class="nav-item text-center mx-sm-3">
            <a class="button" style="border-bottom: 1px solid #FFD00B;" href="">View Profile</a>
        </li>
        <li class="nav-item text-center mx-sm-3">
            <a class="button" href="">Post Suggestion</a>
        </li>
        <li class="nav-item text-center mx-sm-3">
            <a class="button" href="">View Mentees</a>
        </li>
        <li class="nav-item text-center mx-sm-3">
            <a class="button" href="">Skill Sets</a>
        </li>
        <li class="nav-item text-center mx-sm-3">
            <a class="button" href="">Change Password</a>
        </li>

        <li class="nav-item text-center mx-sm-3">
            <button class="search button">
                <img alt="Search" src="/img/search@2x.png" />
                <span class="d-sm-none"> Search </span>
            </button>
        </li>
    </ul>
}

<h1 class="text-center">Suggestion Details</h1>

<div class="container d-flex flex-row" style="margin-top:50px;">
    <div class="d-flex flex-column" style="overflow:scroll; width:35%; height:550px; border:5px;">
        @foreach (var i in Model)
        {
            <a class="" href="#">
                <ul class="list-group">
                    <li class="font-weight-bold list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        ID: @i.SuggestionId
                        <div class="font-weight-bold p-2 bd-highlight"
                             style="border-color:darkslategrey;
                                overflow: hidden;text-overflow: ellipsis; width: 240px; white-space: nowrap;">@i.Description</div>
                                <div class="font-weight-bold badge badge-primary badge-pill"
                                     style="color:#000; background:#FFD00B">@i.Status</div>
                                </li>
                            </ul>
                        </a>

                    }
    </div>
    <form asp-action="Details">
        @foreach (var j in Model)
        {
            @if (j.StudentId.ToString() == ViewData["ID"].ToString())
            {
                <div class="d-flex flex-column LCards">
                    <div class="d-flex flex-row">
                        <div style="box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.1), 0 1px 0px 0 rgba(0, 0, 0, 0.1);
                                width:550px; height:55px;">@j.StudentId</div>
                        <a href="#">
                            <div class="text-center"
                                 style="background-color:#FFD00B; font-size:35px; width:60px; height:55px;
                                    padding:0px;
                                    box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.1), 0 1px 0px 0 rgba(0, 0, 0, 0.1);">
                                +
                            </div>
                        </a>
                        
                    </div>
                        
                    <div>
                        <div class="d-flex" style="box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.2), 0 1px 2px 0 rgba(0, 0, 0, 0.1);
                               height: 450px;width: 470px; 
                               margin:30px 50px 20px 40px;"><p style="padding:8px;">@j.Description</p></div>
                    </div>
                </div>

                break;
            }
            else
            {
                break;
            }

        }

    </form>   

</div>

<style>
    div.LCards {
        margin-left: 50px;
        margin-bottom: 50px;
        height: 550px;
        width: 550px;
        box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.2), 0 6px 2px 0 rgba(0, 0, 0, 0.1);
        text-align: left;
    }
</style>
