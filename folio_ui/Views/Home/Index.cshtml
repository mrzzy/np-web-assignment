@model IEnumerable<Student>
@{
    ViewData["Title"] = "Home Page";
    ViewData["APIEndpoint"] = Context.Items["APIEndpoint"];
}

<div class="landing container text-center"> 
  <div class="row mx-2">
    <img class="jumbotron-fluid" alt="Stand out from the crowd." src="/img/landing_header.png"/>
  </div>
  <div class="row">
    <button class="button call-to-action">
      <span class="text">View Porfolios.</span>
      <div class="stack">
        <img class="expand" src="/img/down@2x.png"/>
      </div>
    </button>
  </div>
  <div class="d-flex my-5 row flex-row justify-content-center align-items-center">
    @foreach(Student student in Model) 
    {
      <div class="card folio-card my-4 mx-3">
        <img class="card-img-top picture mx-auto" src="@ViewData["APIEndpoint"]/api/file/@student.Photo" />
        <div class="card-body">
          <h3 class="card-title name mt-2">@student.Name </h3>
          <p class="card-text description p-1">@student.Description</p>
          <a class="btn button striking" asp-controller="Student" asp-action="Portfolio" asp-route-id="@student.StudentId">
            View Portfolio
          </a>
        </div>
      </div>

    }
  </div>
</div>
